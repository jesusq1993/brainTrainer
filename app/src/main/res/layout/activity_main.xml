<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/timerTxv"
        android:layout_width="81dp"
        android:layout_height="41dp"
        android:layout_marginStart="40dp"
        android:background="#03A9F4"
        android:backgroundTint="#2196F3"
        android:gravity="center"
        android:text="TextView"
        android:textSize="16sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/problemTxv"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/problemAmounttxv"
        android:layout_width="81dp"
        android:layout_height="41dp"
        android:layout_marginEnd="40dp"
        android:background="#FF9800"
        android:gravity="center"
        android:text="TextView"
        android:textSize="16sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/problemTxv"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/problemTxv"
        android:layout_width="81dp"
        android:layout_height="41dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:background="#64FFDA"
        android:gravity="center"
        android:text="TextView"
        android:textSize="16sp"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@+id/problemAmounttxv"
        app:layout_constraintStart_toEndOf="@+id/timerTxv"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/answerTwoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="110dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#536DFE"
        android:text="Button"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/answerfourButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.663"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.895" />

    <Button
        android:id="@+id/answerfourButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="252dp"
        android:backgroundTint="#FF5252"
        android:text="Button"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/answerTwoButton"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/answerThreeButton" />

    <Button
        android:id="@+id/answerThreeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FF4081"
        android:text="Button"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/answerfourButton"
        app:layout_constraintStart_toStartOf="@+id/answerOneButton" />

    <Button
        android:id="@+id/answerOneButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#FFFF00"
        android:text="Button"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/answerThreeButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.277"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.895" />

    <Button
        android:id="@+id/goButton"
        android:layout_width="152dp"
        android:layout_height="117dp"
        android:text="GO!"
        android:onClick="goButton"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>